(setq doom-modeline-env-go-executable "go")
(setq doom-modeline-env-elixir-executable "iex")
(setq doom-modeline-env-rust-executable "rustc")

;; What to display as the version while a new one is being loaded
(setq doom-modeline-env-load-string "...")

;; By default, almost all segments are displayed only in the active window. To
;; display such segments in all windows, specify e.g.
(setq doom-modeline-always-visible-segments '(mu4e irc))

;; Hooks that run before/after the modeline version string is updated
(setq doom-modeline-before-update-env-hook nil)
(setq doom-modeline-after-update-env-hook nil)

(global-set-key (kbd "C-s") 'consult-line) ;; Replaces default isearch with consult-line
(global-set-key (kbd "C-c s r") 'consult-ripgrep)

(use-package hydra
  :straight t)
(defhydra hydra-search (:hint nil :exit t)
  "
🔍 Search Commands
───────────────────────────────────────────────
_f_: 🔎 Search in current file (consult-line)
_r_: 🔍 Search in project (consult-ripgrep)
_b_: 📂 Search in buffers (consult-buffer)
_o_: 📜 Jump to Org heading (consult-org-heading)
_g_: 🔧 Grep in project (consult-grep)
_q_: ❌ Quit
"
  ("f" consult-line)
  ("r" consult-ripgrep)
  ("b" consult-buffer)
  ("o" consult-org-heading)
  ("g" consult-grep)
  ("q" nil "Quit"))

;; Bind the Hydra to a key, e.g., `C-c s`
(global-set-key (kbd "C-c s") 'hydra-search/body)

